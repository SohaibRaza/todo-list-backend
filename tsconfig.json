{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "lib": ["ES6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "target": "ES6",
    "paths": {
      "~/*": ["src/*"]
    },
    "typeRoots": ["./types", "node_modules/@types"]
  },
  "include": ["src/**/*", "**/*.ts", "**/*.d.ts", "/src/types/**/*.d.ts"],
  "exclude": ["node_modules", "build"]
}
